using System.Collections;
using System.Collections.Generic;
using UnityEngine;

public class IN : MonoBehaviour {

	//Invoke的消耗
	float timer = 4f;
	void Start () 
	{
		Invoke ("mm",2f);
	}
	

	void Update () 
	{
		if (timer >= 0) 
		{
			timer -= Time.deltaTime;
			if (timer < 0)
			{
				mm ();
			}
		}
	}

	void mm()
	{
		print ("work");
	}
}
